{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "osx": {
        "MIMode": "lldb",
        "targetArchitecture": "arm64",
        "externalConsole": false,
      },
      "linux": {
        "externalConsole": false,
      },
      "windows": {
        "cwd": "${workspaceFolder}/CyberCoreEngine",
        "program": "${workspaceFolder}/CyberCoreEngine/build",
      },
    
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}



